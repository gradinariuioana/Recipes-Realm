@model RecipesRealm.ViewModels.RecipeViewModel

@{
    ViewBag.Title = "Add a Recipe";
}

@using (Html.BeginForm("Create", "Recipe", FormMethod.Post)) 
{
    <div class="card">
        <div class="card-header">
            @ViewBag.Title
        </div>
        <div class="card-body">
            <div class="row mx-0">
                <h5 class="alert-warning">@ViewBag.Warning</h5>
            </div>
            <div class="row mx-0">
                <div class="card-text col-3">
                    @Html.LabelFor(model => model.Recipe_Name)
                </div>
                <div class="card-text col-3">
                    @Html.TextBoxFor(model => model.Recipe_Name)
                    <div class="text-warning">@Html.ValidationMessageFor(model => model.Recipe_Name)</div>
                </div>
            </div>
            <div class="row mx-0">
                <div class="card-text col-3">
                    <input type="submit" value="Save" />
                </div>
            </div>
        </div>
    </div>
}