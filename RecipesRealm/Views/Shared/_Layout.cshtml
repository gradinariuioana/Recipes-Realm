<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <header id="main-header" class="main-header ">
        <div class="header-content stick ">
            <div id="my-header" class="my-header container-fluid">
                <div class="container">
                    <div class="navbar-header">
                        <a id="main-logo" class="logo" href="/">
                            <img src="~/Content/Assets/Logo.png" alt="logo" />
                        </a>
                    </div>
                    <nav id="site-nav" class="site-nav">
                        <div class="nav-1 ">
                            <ul>
                                <li>
                                    @Html.ActionLink("Recipes", "Index", "Recipe")
                                </li>
                                <li class="has-submenu">
                                    @Html.ActionLink("Discover", "Index", "Category")
                                    <ul id="dropdown" class="submenu submenu-category row">
                                        @foreach (var el in ViewBag.LayoutModel.Categories) {
                                            string catName = el.Category_Name;
                                            <li class="submenu-heading col-4">
                                                @Html.ActionLink(catName, "Details", "Category", new { id = el.Category_ID }, new { })
                                            </li>
                                        }
                                    </ul>
                                </li>
                                <li id="recommendationLink">
                                    @Html.ActionLink("Recommendations", "Index", "Recommendation")
                                </li>
                            </ul>
                        </div>
                        <div class="nav-2">
                            <ul>
                                <li class="site-search d-none">
                                    <span><svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 27.6 27.6"><path d="M26.5 22.7l-4.4-4.4c1.2-1.8 1.9-4 1.9-6.3C24 5.5 18.8.3 12.3.3 5.8.3.6 5.6.6 12s5.2 11.7 11.7 11.7c2.3 0 4.5-.7 6.3-1.9l4.4 4.4c1 1 2.6 1 3.5 0 1-.9 1-2.5 0-3.5zm-14.2-2.3c-4.6 0-8.3-3.7-8.3-8.3s3.7-8.3 8.3-8.3c4.6 0 8.3 3.7 8.3 8.3 0 4.5-3.7 8.3-8.3 8.3z" /></svg></span>
                                    <div id="search" class="container-fluid">
                                        <div class="container">
                                            <div class="search-input">
                                                <div class="input-wrapper">
                                                    <i class="search-icon"></i>
                                                    <form id="site-search" method="get" action="/search/">
                                                        <input type="text" placeholder="Search for anything" class="typeahead input_text clear_search" name="s">
                                                        <input type="submit" value="Search">
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="login-container invisible">
                                    <div class="login-links">
                                        <a onclick="$.fn.showSignUp();" href="#">Sign up</a>
                                        <i>/</i>
                                        <a onclick="$.fn.showLogin();" href="#">Log in</a>
                                    </div>
                                </li>
                                <li class="logged-in d-none has-submenu">
                                    <p></p>
                                    <ul id="dropdown" class="submenu submenu-user row">
                                        <li class="submenu-heading col-6 myRecipesLink">
                                            @Html.ActionLink("My Recipes", "MyRecipes", "User")
                                        </li>
                                        <li class="submenu-heading col-6">
                                            @Html.ActionLink("Add Recipe", "Create", "Recipe")
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div class="modal fade" id="loginModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title loginTitle">Login</h5>
                    <h5 class="modal-title signUpTitle d-none">Sign Up</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="login-block">
                        <form id="loginForm">
                            <label for="login_Email">Email Address</label>
                            <input type="text" placeholder="E-mail address" id="login_Email" class="form-control mb-3" />
                            <label for="login_Password">Password</label>
                            <input type="password" placeholder="Password" id="login_Password" class="form-control mb-2" />
                            <div class="text-danger invisible mb-3" id="login-error">* Email or Password is incorrect</div>
                            <input type="submit" value="Login" class="btn form-control mx-auto mb-3" id="loginBtn" />
                        </form>
                        <p>Not a user? <a href="#" onclick="$.fn.showSignUp();">Sign up</a> instead</p>
                    </div>
                    <div class="signup-block d-none">
                        <form id="signUpForm">
                            <label for="signUp_Username">User Name</label>
                            <input type="text" placeholder="User Name" id="signUp_Username" class="form-control mb-3" />
                            <label for="signUp_Email">Email Address</label>
                            <input type="text" placeholder="E-mail address" id="signUp_Email" class="form-control mb-3" />
                            <label for="signUp_Password">Password</label>
                            <input type="password" placeholder="Password" id="signUp_Password" class="form-control mb-2" />
                            <div class="text-danger invisible mb-3" id="signup-error">* Signing up error</div>
                            <input type="submit" value="Sign Up" class="btn form-control mx-auto mb-3" id="signUpBtn" />
                        </form>
                        <p>Already a user? <a href="#" onclick="$.fn.showLogin();">Login</a> instead</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <link rel="stylesheet" href="~/Content/filter_multi_select.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Exo&family=Quicksand:wght@500&display=swap" rel="stylesheet">
    <script src="~/Scripts/filter-multi-select-bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>

<script>

    $.fn.showLogin = function () {
        $('.signup-block').addClass('d-none');
        $('.signUpTitle').addClass('d-none');

        $('.login-block').removeClass('d-none');
        $('.loginTitle').removeClass('d-none');

        $('#loginModal').modal('show');
    }

    $.fn.showSignUp = function () {
        $('.login-block').addClass('d-none');
        $('.loginTitle').addClass('d-none');

        $('.signup-block').removeClass('d-none');
        $('.signUpTitle').removeClass('d-none');

        $('#loginModal').modal('show');
    }

    $(document).ready(function () {

        if (localStorage.getItem("loggedInUserName") != undefined) {
            $('.login-container').addClass('d-none');
            $('.logged-in p').html("Hello, " + localStorage.getItem("loggedInUserName"));
            $('.logged-in').removeClass('d-none');
        }
        else {
            $('.login-container').removeClass('invisible');
        }

        if (localStorage.getItem("loggedInUserId") != undefined) {
            var strs = $('#recommendationLink a').attr('href').split('/Index');
            if (strs.length == 1 || strs[1].length < 2) {
                $('#recommendationLink a').attr('href', $('#recommendationLink a').attr('href') + '/Index/' + localStorage.getItem("loggedInUserId"));
            }
            strs = $('.myRecipesLink a').attr('href').split('/MyRecipes');
            if (strs[1].length < 2) {
                $('.myRecipesLink a').attr('href', $('.myRecipesLink a').attr('href') + '/' + localStorage.getItem("loggedInUserId"));
            }
        }

        $('#loginForm').submit(function (e) {
            e.preventDefault();

            var formData = new FormData();

            var model = {
                Email_Address: $('#login_Email').val(),
                Password: $('#login_Password').val()
            };

            var modelStr = JSON.stringify(model);

            formData.append("modelString", modelStr);

            $.ajax({
                type: "POST",
                url: '/User/Login',
                data: formData,
                async: false,
                cache: false,
                contentType: false,
                processData: false,
                timeout: 60000,
                success: function (user) {
                    var u = JSON.parse(user);

                    if (u.userId != -1) {
                        localStorage.setItem("loggedInUserName", u.userName);
                        localStorage.setItem("loggedInUserId", u.userId);

                        window.location.reload();
                    }
                    else {
                        $('#login-error').removeClass('invisible');
                    }
                },
                error: function (error) {
                    console.log(error);

                    $('#login-error').removeClass('invisible');
                }

            });

            return false;
        })

        $('#signUpForm').submit(function (e) {
            e.preventDefault();

            var formData = new FormData();

            var model = {
                User_Name: $('#signUp_Username').val(),
                Email_Address: $('#signUp_Email').val(),
                Password: $('#signUp_Password').val()
            };

            var modelStr = JSON.stringify(model);

            formData.append("modelString", modelStr);

            $.ajax({
                type: "POST",
                url: '/User/SignUp',
                data: formData,
                async: false,
                cache: false,
                contentType: false,
                processData: false,
                timeout: 60000,
                success: function (user) {
                    var u = JSON.parse(user);

                    if (u.userId != -1) {
                        localStorage.setItem("loggedInUserName", u.userName);
                        localStorage.setItem("loggedInUserId", u.userId);

                        window.location.reload();
                    }
                    else {
                        if (u.EmailExists != undefined) {
                            $('#signup-error').html("An user with this E-mail Address already exists!");
                        }
                        $('#signup-error').removeClass('invisible');
                    }
                },
                error: function (error) {
                    console.log(error);

                    $('#signup-error').removeClass('invisible');
                }

            });

            return false;
        })
    })

</script>

</html>
